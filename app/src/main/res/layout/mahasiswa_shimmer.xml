<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fab_tb"
    android:layout_marginBottom="@dimen/fab_tb"
    android:layout_marginLeft="@dimen/fab_lr"
    android:layout_marginRight="@dimen/fab_lr"
    app:cardCornerRadius="@dimen/fab_tb">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="@dimen/fab_lr">
        <ImageView
            android:layout_width="@dimen/fab_ivw"
            android:layout_height="@dimen/fab_ivh"
            android:scaleType="centerCrop"
            android:id="@+id/iv_item_photo"
            android:layout_marginBottom="@dimen/fab_tb"
            android:background="@color/colorGrey"
            tools:src="@color/colorAccent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_item_photo"
            android:layout_toEndOf="@id/iv_item_photo"
            android:id="@+id/tv_nim"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/colorGrey"
            android:layout_marginBottom="@dimen/fab_lr"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"/>
        <TextView
            android:layout_below="@id/tv_nim"
            android:layout_toRightOf="@id/iv_item_photo"
            android:layout_toEndOf="@id/iv_item_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nama"
            android:background="@color/colorGrey"
            android:layout_marginBottom="@dimen/fab_lr"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"/>
        <TextView
            android:layout_below="@id/tv_nama"
            android:layout_toRightOf="@id/iv_item_photo"
            android:layout_toEndOf="@id/iv_item_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_jurusan"
            android:background="@color/colorGrey"
            android:layout_marginBottom="@dimen/fab_lr"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"/>
        <TextView
            android:layout_below="@id/tv_jurusan"
            android:layout_toRightOf="@id/iv_item_photo"
            android:layout_toEndOf="@id/iv_item_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hp"
            android:background="@color/colorGrey"
            android:layout_marginBottom="@dimen/fab_lr"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_item_photo"
            android:layout_toEndOf="@id/iv_item_photo"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/colorGrey"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/colorGrey"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>